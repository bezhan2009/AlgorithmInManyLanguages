define function bubbleSort(arr) {
    n = size(arr);
    for i = 0 to n-2 {
        for j = 0 to n-2-i {
            if arr[j] > arr[j+1] {
                temp = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = temp;
            }
        }
    }
    return arr;
}

// Пример использования
arr = [5, 3, 8, 4, 2];
bubbleSort(arr);
print(arr);
